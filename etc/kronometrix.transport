RETVAL=0
OS_NAME=`uname -s`
KRMX_PREFIX="/opt/kronometrix"
KRMX_BIN=${KRMX_PREFIX}/bin
KRMX_LOG=${KRMX_PREFIX}/log
TRANSPORT="sender"

# sender
test -f ${KRMX_BIN}/sender || exit 0


start() {
    echo "Starting KRMX transport"

    # check uid
    if [ "X${OS_NAME}" = "XSunOS" ]; then
        if [ "`/usr/xpg4/bin/id -ur`" != '0' ]; then
            echo 'Error: you must be root to start KRMX transport'
            exit 1
        fi
    else
        if [ "`id -ur`" != '0' ]; then
            echo 'Error: you must be root to start KRMX transport'
            exit 1
        fi
    fi

    RETVAL=0

    if [ "X${OS_NAME}" = "XSunOS" ]; then
        echo " ${TRANSPORT}: \c"
    else
        echo -n " ${TRANSPORT}: "
    fi
           
    # check pid before start
    if [ -f ${KRMX_LOG}/${TRANSPORT}.pid ]; then
        kill -0 `cat ${KRMX_LOG}/${TRANSPORT}.pid` >/dev/null 2>&1
        if [ $? -ne 0 ]; then
            su - krmx -c "${KRMX_BIN}/${TRANSPORT} -t5 10 >/dev/null 2>&1"
            RETVAL=$?
        else
            RETVAL=1
        fi
        [ $RETVAL -eq 0 ] && echo "ok" || echo "failed"
    else
        # no pid files
        su - krmx -c "${KRMX_BIN}/${TRANSPORT} -t5 10 >/dev/null 2>&1"
        RETVAL=$?
        [ $RETVAL -eq 0 ] && echo "ok" || echo "failed"
    fi

    return $RETVAL
}


stop() {
    echo "Stopping KRMX transport"

    RETVAL=0

    if [ "X${OS_NAME}" = "XSunOS" ]; then
        echo " ${TRANSPORT}: \c"
    else
        echo -n " ${TRANSPORT}: "
    fi

    if [ -f ${KRMX_LOG}/${TRANSPORT}.pid ]; then
        kill `cat ${KRMX_LOG}/${TRANSPORT}.pid` >/dev/null 2>&1
        RETVAL=$?
        [ $RETVAL -eq 0 ] && echo "ok" || echo "failed"
    else
        RETVAL=1
        [ $RETVAL -eq 0 ] && echo "ok" || echo "failed"
    fi

    return $RETVAL
}

case "$1" in
   start)
      start
      ;;
   stop)
      stop
      ;;
   restart)
      stop
      start
      ;;
   *)
      echo "Usage: $0 {start|stop|restart}"
      exit 1
esac
exit $RETVAL
