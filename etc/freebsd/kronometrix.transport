#
# Add the following lines to /etc/rc.conf to enable Kronometrix
#
# kronometrix.transport_enable="YES"
# kronometrix_user="krmx"

. /etc/rc.subr

name=kronometrix.transport
rcvar=kronometrix.transport_enable

load_rc_config ${name}

command=/opt/kronometrix/etc/sender
start_cmd="${name}_start"
stop_cmd="${name}_stop"
status_cmd="${name}_status"

: ${kronometrix_enable="NO"}
: ${kronometrix_user="krmx"}
: ${kronometrix_args=""}

kronometrix_start() {
    unset "${rc_arg}_cmd"
    local cmd
    kronometrix_args="start"
    cmd="${command} ${kronometrix_args}"
    su -m ${kronometrix_user} -c "${cmd}" 
}


kronometrix_stop() {
    local cmd
    kronometrix_args="stop"
    cmd="${command} ${kronometrix_args}"
    su -m ${kronometrix_user} -c "${cmd}" 
}


run_rc_command "$1"
